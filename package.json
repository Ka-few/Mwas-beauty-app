{
  "name": "mwas-beauty",
  "version": "1.0.0",
  "description": "Beauty Salon Management System",
  "author": "Njoroge",
  "private": true,
  "main": "electron/dist/main.js",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "sql.js": "^1.12.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^18.19.130",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^9.2.1",
    "electron": "^33.2.1",
    "electron-builder": "^26.4.0",
    "@types/sql.js": "^1.4.9",
    "esbuild": "^0.27.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "scripts": {
    "backend:dev": "cd backend && ts-node server.ts",
    "frontend:dev": "cd frontend && npx vite --port 3000",
    "electron:build": "tsc -p electron",
    "backend:build": "tsc -p backend",
    "backend:bundle": "esbuild backend/server.ts --bundle --platform=node --target=node20 --outfile=backend/dist/server.bundle.js --format=cjs && cp node_modules/sql.js/dist/sql-wasm.wasm backend/dist/",
    "frontend:build": "cd frontend && npm run build",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\" \"wait-on http://localhost:3000 && ELECTRON_START_URL=http://localhost:3000 electron -r ts-node/register electron/main.ts\"",
    "build": "npm run frontend:build && npm run backend:build && npm run backend:bundle && npm run electron:build",
    "dist": "npm run build && electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps",
    "web": "concurrently \"npm run backend:dev\" \"wait-on http://127.0.0.1:3001/api/health && npm run frontend:dev\"",
    "license:reset": "cd backend && ts-node scripts/license-test.ts reset",
    "license:expire": "cd backend && ts-node scripts/license-test.ts expire"
  },
  "build": {
    "appId": "com.mwas.desktop",
    "productName": "MwasBeauty",
    "asar": true,
    "asarUnpack": [
      "backend/dist/**/*",
      "backend/db/schema.sql"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "backend/**/*",
      "!backend/db/*.db",
      "frontend/dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MwasBeauty"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Njoroge <admin@mwasbeauty.com>"
    }
  }
}