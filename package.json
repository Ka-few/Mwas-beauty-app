{
  "name": "mwas-beauty",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",

  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },

  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },

  "scripts": {
    "backend:dev": "cd backend && ts-node server.ts",
    "frontend:dev": "cd frontend && npx vite --port 3000",

    "electron:build": "tsc -p electron",
    "backend:build": "tsc -p backend",
    "frontend:build": "cd frontend && npm run build",

    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\" \"wait-on http://localhost:3000 && ELECTRON_START_URL=http://localhost:3000 electron -r ts-node/register electron/main.ts\"",

    "build": "npm run frontend:build && npm run backend:build && npm run electron:build",
    "dist": "npm run build && electron-builder"
  },

  "build": {
    "appId": "com.mwas.desktop",
    "productName": "MwasBeauty",

    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },

    "files": [
      "backend/**/*",
      "frontend/build/**/*",
      "electron/**/*",
      "package.json"
    ],

    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },

    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MwasBeauty"
    },

    "mac": {
      "target": "dmg"
    },

    "linux": {
      "target": "AppImage"
    }
  }
}
